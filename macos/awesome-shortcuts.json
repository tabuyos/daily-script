{
  "title": "awesome shortcuts!",
  "maintainers": [
    "tabuyos"
  ],
  "rules": [
    {
      "description": "click left or right Shift to change input method.",
      "manipulators": [
        {
          "type": "basic",
          "description": "use single-click left shift to switch input method",
          "from": {
            "key_code": "left_shift"
          },
          "to": [
            {
              "key_code": "left_shift"
            }
          ],
          "to_if_alone": [
            {
              "key_code": "0",
              "modifiers": [
                "left_control",
                "left_option",
                "left_command"
              ]
            }
          ]
        },
        {
          "type": "basic",
          "description": "use single-click right shift to switch input method",
          "from": {
            "key_code": "right_shift"
          },
          "to": [
            {
              "key_code": "right_shift"
            }
          ],
          "to_if_alone": [
            {
              "key_code": "0",
              "modifiers": [
                "left_control",
                "left_option",
                "left_command"
              ]
            }
          ]
        }
      ]
    },
    {
      "description": "emacs key bindings [C-x key strokes]",
      "manipulators": [
        {
          "type": "basic",
          "description": "quit application by C-x C-c",
          "from": {
            "key_code": "c",
            "modifiers": {
              "mandatory": [
                "control"
              ],
              "optional": [
                "caps_lock"
              ]
            }
          },
          "to": [
            {
              "key_code": "q",
              "modifiers": [
                "left_command"
              ]
            }
          ],
          "conditions": [
            {
              "type": "variable_if",
              "name": "C-x",
              "value": 1
            }
          ]
        },
        {
          "type": "basic",
          "description": "open file by C-x C-f",
          "from": {
            "key_code": "f",
            "modifiers": {
              "mandatory": [
                "control"
              ],
              "optional": [
                "caps_lock"
              ]
            }
          },
          "to": [
            {
              "key_code": "o",
              "modifiers": [
                "left_command"
              ]
            }
          ],
          "conditions": [
            {
              "type": "variable_if",
              "name": "C-x",
              "value": 1
            }
          ]
        },
        {
          "type": "basic",
          "description": "save file byC-x C-s",
          "from": {
            "key_code": "s",
            "modifiers": {
              "mandatory": [
                "control"
              ],
              "optional": [
                "caps_lock"
              ]
            }
          },
          "to": [
            {
              "key_code": "s",
              "modifiers": [
                "left_command"
              ]
            }
          ],
          "conditions": [
            {
              "type": "variable_if",
              "name": "C-x",
              "value": 1
            }
          ]
        },
        {
          "type": "basic",
          "description": "define prefix: C-x",
          "from": {
            "any": "key_code",
            "modifiers": {
              "optional": [
                "any"
              ]
            }
          },
          "conditions": [
            {
              "type": "variable_if",
              "name": "C-x",
              "value": 1
            }
          ]
        },
        {
          "type": "basic",
          "description": "define action of prefix C-x",
          "from": {
            "key_code": "x",
            "modifiers": {
              "mandatory": [
                "control"
              ],
              "optional": [
                "caps_lock"
              ]
            }
          },
          "to": [
            {
              "set_variable": {
                "name": "C-x",
                "value": 1
              }
            }
          ],
          "to_delayed_action": {
            "to_if_invoked": [
              {
                "set_variable": {
                  "name": "C-x",
                  "value": 0
                }
              }
            ],
            "to_if_canceled": [
              {
                "set_variable": {
                  "name": "C-x",
                  "value": 0
                }
              }
            ]
          },
          "conditions": [
            {
              "type": "frontmost_application_unless",
              "bundle_identifiers": [
                "^org\\.gnu\\.Emacs$",
                "^com\\.jetbrains\\.intellij$",
                "^com\\.jetbrains\\..+$",
                "^org\\.gnu\\.AquamacsEmacs$",
                "^org\\.gnu\\.Aquamacs$",
                "^com\\.googlecode\\.iterm2$"
              ]
            }
          ]
        }
      ]
    },
